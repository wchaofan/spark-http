<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 https://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>sparksql-server</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <baseDirectory>sparksql-server</baseDirectory>

    <fileSets>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/resources/bin</directory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>src/main/resources/conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>license</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>pids</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>com.taobao.arthas:arthas-common:*</exclude>
                <exclude>com.taobao.arthas:arthas-boot:*</exclude>
                <exclude>com.alibaba.middleware:cli:*</exclude>
                <exclude>com.mininglamp:sparksql-*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>bin/arthas</outputDirectory>
            <includes>
                <include>com.taobao.arthas:arthas-common:*</include>
                <include>com.taobao.arthas:arthas-boot:*</include>
                <include>com.alibaba.middleware:cli:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>share</outputDirectory>
            <includes>
                <include>com.mininglamp:sparksql-*</include>
            </includes>
            <excludes>
                <exclude>com.mininglamp:sparksql-project</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <componentDescriptors/>
</assembly>
